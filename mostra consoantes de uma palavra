/*mostra as consoantes da palavra digitada pelo usu√°rio*/
#include <stdio.h>
#include <string.h>
int main()
{
    char palavra[100];
    int x, tam;
    printf("Digite uma palavra: "); 
    gets(palavra);
    tam=strlen(palavra);
    for(x=0; x<tam; x++){
        if (palavra[x] != 'a' && palavra[x] != 'e' && palavra[x] != 'i' && palavra[x] != 'o' && palavra[x] != 'u'){
    		printf ("%c", palavra[x]);
    	}
    }
    return 0;
}
